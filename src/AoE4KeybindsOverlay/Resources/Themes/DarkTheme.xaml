<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ============================================================ -->
    <!-- Background Colors                                            -->
    <!-- ============================================================ -->
    <Color x:Key="PrimaryBackgroundColor">#1A1A2E</Color>
    <Color x:Key="SecondaryBackgroundColor">#16213E</Color>
    <Color x:Key="TertiaryBackgroundColor">#0F3460</Color>
    <Color x:Key="SurfaceColor">#1E2A4A</Color>
    <Color x:Key="OverlayBackgroundColor">#CC1A1A2E</Color>

    <SolidColorBrush x:Key="PrimaryBackgroundBrush" Color="{StaticResource PrimaryBackgroundColor}" />
    <SolidColorBrush x:Key="SecondaryBackgroundBrush" Color="{StaticResource SecondaryBackgroundColor}" />
    <SolidColorBrush x:Key="TertiaryBackgroundBrush" Color="{StaticResource TertiaryBackgroundColor}" />
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}" />
    <SolidColorBrush x:Key="OverlayBackgroundBrush" Color="{StaticResource OverlayBackgroundColor}" />

    <!-- ============================================================ -->
    <!-- Accent / UI Colors                                           -->
    <!-- ============================================================ -->
    <Color x:Key="AccentColor">#E94560</Color>
    <Color x:Key="AccentSecondaryColor">#533483</Color>
    <Color x:Key="BorderColor">#2A2A4A</Color>
    <Color x:Key="BorderHighlightColor">#4A4A6A</Color>

    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}" />
    <SolidColorBrush x:Key="AccentSecondaryBrush" Color="{StaticResource AccentSecondaryColor}" />
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}" />
    <SolidColorBrush x:Key="BorderHighlightBrush" Color="{StaticResource BorderHighlightColor}" />

    <!-- ============================================================ -->
    <!-- Text Colors                                                  -->
    <!-- ============================================================ -->
    <Color x:Key="PrimaryTextColor">#FFFFFF</Color>
    <Color x:Key="SecondaryTextColor">#B0B0C0</Color>
    <Color x:Key="MutedTextColor">#6A6A8A</Color>

    <SolidColorBrush x:Key="PrimaryTextBrush" Color="{StaticResource PrimaryTextColor}" />
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="{StaticResource SecondaryTextColor}" />
    <SolidColorBrush x:Key="MutedTextBrush" Color="{StaticResource MutedTextColor}" />

    <!-- ============================================================ -->
    <!-- Key Colors                                                   -->
    <!-- ============================================================ -->
    <Color x:Key="KeyNormalBackgroundColor">#AA1A1A2E</Color>
    <Color x:Key="KeyPressedBackgroundColor">#DD3A3A6E</Color>
    <Color x:Key="KeyHighlightBorderColor">#CCFFFFFF</Color>

    <SolidColorBrush x:Key="KeyNormalBackgroundBrush" Color="{StaticResource KeyNormalBackgroundColor}" />
    <SolidColorBrush x:Key="KeyPressedBackgroundBrush" Color="{StaticResource KeyPressedBackgroundColor}" />
    <SolidColorBrush x:Key="KeyHighlightBorderBrush" Color="{StaticResource KeyHighlightBorderColor}" />

    <!-- ============================================================ -->
    <!-- Category Brushes (matching BindingCategory.DefaultColor())   -->
    <!-- ============================================================ -->
    <SolidColorBrush x:Key="CategoryCameraBrush" Color="#FF4A90E2" />
    <SolidColorBrush x:Key="CategoryControlGroupsBrush" Color="#FF9B59B6" />
    <SolidColorBrush x:Key="CategoryUnitCommandsBrush" Color="#FF2ECC71" />
    <SolidColorBrush x:Key="CategoryGeneralBrush" Color="#FF95A5A6" />
    <SolidColorBrush x:Key="CategoryGameMenuBrush" Color="#FF34495E" />
    <SolidColorBrush x:Key="CategoryObserverBrush" Color="#FFE67E22" />
    <SolidColorBrush x:Key="CategoryUnitSelectionBrush" Color="#FF1ABC9C" />
    <SolidColorBrush x:Key="CategoryUnitControlBrush" Color="#FFF39C12" />
    <SolidColorBrush x:Key="CategoryBuildingsBrush" Color="#FFE74C3C" />
    <SolidColorBrush x:Key="CategoryAbilitiesBrush" Color="#FF16A085" />
    <SolidColorBrush x:Key="CategoryUnknownBrush" Color="#FF7F8C8D" />

    <!-- ============================================================ -->
    <!-- Font Family                                                  -->
    <!-- ============================================================ -->
    <FontFamily x:Key="PrimaryFontFamily">Segoe UI</FontFamily>

    <!-- ============================================================ -->
    <!-- Key Styles                                                   -->
    <!-- ============================================================ -->

    <!-- Normal Key Border Style -->
    <Style x:Key="KeyBorderStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource KeyNormalBackgroundBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="3" />
    </Style>

    <!-- Key Label Text Style -->
    <Style x:Key="KeyLabelStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}" />
        <Setter Property="FontFamily" Value="{StaticResource PrimaryFontFamily}" />
        <Setter Property="FontSize" Value="11" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="TextTrimming" Value="CharacterEllipsis" />
    </Style>

    <!-- Binding Label Text Style (smaller text below key label) -->
    <Style x:Key="BindingLabelStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource SecondaryTextBrush}" />
        <Setter Property="FontFamily" Value="{StaticResource PrimaryFontFamily}" />
        <Setter Property="FontSize" Value="7" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="TextTrimming" Value="CharacterEllipsis" />
        <Setter Property="Opacity" Value="0.8" />
    </Style>

    <!-- Category Badge Style -->
    <Style x:Key="CategoryBadgeStyle" TargetType="Border">
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Padding" Value="6,2" />
    </Style>

    <Style x:Key="CategoryBadgeTextStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}" />
        <Setter Property="FontFamily" Value="{StaticResource PrimaryFontFamily}" />
        <Setter Property="FontSize" Value="10" />
        <Setter Property="FontWeight" Value="Medium" />
    </Style>

    <!-- Binding List Item Style -->
    <Style x:Key="BindingListItemBorderStyle" TargetType="Border">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}" />
        <Setter Property="BorderThickness" Value="0,0,0,1" />
        <Setter Property="Padding" Value="8,4" />
    </Style>

    <Style x:Key="BindingCommandTextStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}" />
        <Setter Property="FontFamily" Value="{StaticResource PrimaryFontFamily}" />
        <Setter Property="FontSize" Value="11" />
    </Style>

    <Style x:Key="BindingKeyComboTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource PrimaryFontFamily}" />
        <Setter Property="FontSize" Value="11" />
        <Setter Property="FontWeight" Value="Bold" />
    </Style>

    <!-- Legend Dot Style -->
    <Style x:Key="LegendDotStyle" TargetType="Ellipse">
        <Setter Property="Width" Value="8" />
        <Setter Property="Height" Value="8" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <Style x:Key="LegendTextStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource SecondaryTextBrush}" />
        <Setter Property="FontFamily" Value="{StaticResource PrimaryFontFamily}" />
        <Setter Property="FontSize" Value="10" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Margin" Value="3,0,10,0" />
    </Style>

</ResourceDictionary>
