<UserControl x:Class="AoE4KeybindsOverlay.Views.Controls.CategoryLegend"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:AoE4KeybindsOverlay.Views.Controls"
             xmlns:converters="clr-namespace:AoE4KeybindsOverlay.Converters"
             mc:Ignorable="d"
             d:DesignWidth="600" d:DesignHeight="30">

    <UserControl.Resources>
        <converters:CategoryToBrushConverter x:Key="CategoryToBrushConverter" />
    </UserControl.Resources>

    <!-- Horizontal legend showing colored dots with category names -->
    <ItemsControl ItemsSource="{Binding LegendItems, RelativeSource={RelativeSource AncestorType=local:CategoryLegend}}">
        <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
                <WrapPanel Orientation="Horizontal" />
            </ItemsPanelTemplate>
        </ItemsControl.ItemsPanel>

        <ItemsControl.ItemTemplate>
            <DataTemplate>
                <StackPanel Orientation="Horizontal"
                            Margin="0,0,10,0"
                            VerticalAlignment="Center">
                    <Ellipse Width="8"
                             Height="8"
                             Fill="{Binding Category, Converter={StaticResource CategoryToBrushConverter}}"
                             VerticalAlignment="Center" />
                    <TextBlock Text="{Binding DisplayName}"
                               Foreground="#B0B0C0"
                               FontFamily="Segoe UI"
                               VerticalAlignment="Center"
                               Margin="3,0,0,0" />
                </StackPanel>
            </DataTemplate>
        </ItemsControl.ItemTemplate>
    </ItemsControl>

</UserControl>
