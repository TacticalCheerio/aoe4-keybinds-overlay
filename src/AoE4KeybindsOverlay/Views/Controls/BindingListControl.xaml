<UserControl x:Class="AoE4KeybindsOverlay.Views.Controls.BindingListControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:AoE4KeybindsOverlay.Views.Controls"
             xmlns:converters="clr-namespace:AoE4KeybindsOverlay.Converters"
             mc:Ignorable="d"
             d:DesignWidth="400" d:DesignHeight="200">

    <UserControl.Resources>
        <converters:CategoryToBrushConverter x:Key="CategoryToBrushConverter" />
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </UserControl.Resources>

    <Border Background="#CC1A1A2E"
            CornerRadius="5"
            Padding="4">

        <ScrollViewer VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">
            <ItemsControl ItemsSource="{Binding BindingItems, RelativeSource={RelativeSource AncestorType=local:BindingListControl}}"
                          HorizontalContentAlignment="Stretch"
                          VirtualizingStackPanel.IsVirtualizing="True"
                          VirtualizingStackPanel.VirtualizationMode="Recycling">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <VirtualizingStackPanel Orientation="Vertical" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemContainerStyle>
                    <Style TargetType="ContentPresenter">
                        <Setter Property="HorizontalAlignment" Value="Stretch" />
                    </Style>
                </ItemsControl.ItemContainerStyle>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Padding="8,4"
                                BorderBrush="#2A2A4A"
                                BorderThickness="0,0,0,1">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Background" Value="Transparent" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsTriggered}" Value="True">
                                            <Setter Property="Background" Value="#22FFFFFF" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <!-- Key combo (colored by category) -->
                                <TextBlock Grid.Column="0"
                                           Text="{Binding KeyComboText}"
                                           Foreground="{Binding Category, Converter={StaticResource CategoryToBrushConverter}}"
                                           FontFamily="Segoe UI"
                                           FontWeight="Bold"
                                           VerticalAlignment="Center"
                                           Margin="0,0,8,0" />

                                <!-- Command name -->
                                <TextBlock Grid.Column="1"
                                           Text="{Binding CommandName}"
                                           Foreground="White"
                                           FontFamily="Segoe UI"
                                           VerticalAlignment="Center"
                                           TextWrapping="Wrap" />

                                <!-- Category badge -->
                                <Border Grid.Column="2"
                                        CornerRadius="8"
                                        Padding="6,2"
                                        Background="{Binding Category, Converter={StaticResource CategoryToBrushConverter}}"
                                        Opacity="0.7"
                                        VerticalAlignment="Center"
                                        Margin="8,0,0,0">
                                    <TextBlock Text="{Binding CategoryName}"
                                               Foreground="White"
                                               FontFamily="Segoe UI"
                                               FontWeight="Medium" />
                                </Border>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Border>

</UserControl>
